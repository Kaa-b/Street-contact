{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "max-len": ["error", {"code": 120, "ignoreUrls": true}],
    "quotes": ["error", "single"],
    // we want to force semicolons
    "semi": ["error", "always"],
    // we use 2 spaces to indent our code
    "indent": ["error", 2],
    // we want to avoid extraneous spaces
    "no-multi-spaces": ["error"]
  }
}
